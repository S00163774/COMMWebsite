@using System.Data.SqlClient;
@using System.Data
@using HairSalon_Website;
@{
    var message = "";
    int times = 1;
    List<string> timeSlots = new List<string>();
    var date = DateTime.Now;
    var thisDate = Convert.ToString(DateTime.Now);
    User user;

    if (IsPost)
    {
        thisDate = Request.Form["datepicker"];
        string time = Request.Form["time"];
        string cat = Request.Form["category"];
        date = Convert.ToDateTime(thisDate);

        var today = DateTime.Now;
        var dateTaken = Convert.ToDateTime(Request.Form["datepicker"]);

        if (Session["HairSalonUser"] != null)
        {
            user = (User)Session["HairSalonUser"];

            if (dateTaken > today && time.Contains(":"))
            {
                int slot = DatabaseControl.GetBookingSlots(time);
                DatabaseControl.InsertBooking(user.UserFirstName, cat, slot, user.UserEmail, Convert.ToDateTime(thisDate));
                Response.Redirect("makeBookingPage.cshtml", false);
            }

            else
            {
                message = "Please enter a future date and choose and time slot.";
            }
        }
    }
}

