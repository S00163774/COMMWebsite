@using System.Data.SqlClient;
@using System.Data
@using HairSalon_Website;
@{
    User userLoggedIn = (User)Session["HairSalonUser"];

    if (Session["HairSalonUser"] == null || userLoggedIn.UserType == "Customer")
    {
        Response.Redirect("~/login.cshtml");
    }

    List<TimetableDetails> details = DatabaseControl.TimetableDetails();
    List<User> stylists = DatabaseControl.ReturnStylists();

    foreach (TimetableDetails detail in details)
    {
        //Start Hour
        if (detail.BeginSlot == 1 || detail.BeginSlot == 2)
        { detail.Hour = 9; }

        else if (detail.BeginSlot == 3 || detail.BeginSlot == 4)
        { detail.Hour = 10; }

        else if (detail.BeginSlot == 5 || detail.BeginSlot == 6)
        { detail.Hour = 11; }

        else if (detail.BeginSlot == 7 || detail.BeginSlot == 8)
        { detail.Hour = 12; }

        else if (detail.BeginSlot == 9 || detail.BeginSlot == 10)
        { detail.Hour = 13; }

        else if (detail.BeginSlot == 11 || detail.BeginSlot == 12)
        { detail.Hour = 14; }

        else if (detail.BeginSlot == 13 || detail.BeginSlot == 14)
        { detail.Hour = 15; }

        else if (detail.BeginSlot == 15 || detail.BeginSlot == 16)
        { detail.Hour = 16; }

        else if (detail.BeginSlot == 17 || detail.BeginSlot == 18)
        { detail.Hour = 17; }

        //Start Minute    
        if (detail.BeginSlot == 2 || detail.BeginSlot == 4 || detail.BeginSlot == 6 || detail.BeginSlot == 8 || detail.BeginSlot == 10 || detail.BeginSlot == 12 || detail.BeginSlot == 14 || detail.BeginSlot == 16 || detail.BeginSlot == 18)
        { detail.Minutes = 30; }

        ///////////////

        //End Hour
        if (detail.EndSlot == 1 || detail.EndSlot == 2)
        { detail.EndHour = 9; }

        else if (detail.EndSlot == 3 || detail.EndSlot == 4)
        { detail.EndHour = 10; }

        else if (detail.EndSlot == 5 || detail.EndSlot == 6)
        { detail.EndHour = 11; }

        else if (detail.EndSlot == 7 || detail.EndSlot == 8)
        { detail.EndHour = 12; }

        else if (detail.EndSlot == 9 || detail.EndSlot == 10)
        { detail.EndHour = 13; }

        else if (detail.EndSlot == 11 || detail.EndSlot == 12)
        { detail.EndHour = 14; }

        else if (detail.EndSlot == 13 || detail.EndSlot == 14)
        { detail.EndHour = 15; }

        else if (detail.EndSlot == 15 || detail.EndSlot == 16)
        { detail.EndHour = 16; }

        else if (detail.EndSlot == 17 || detail.EndSlot == 18)
        { detail.EndHour = 17; }

        //End Minute    
        if (detail.EndSlot == 2 || detail.EndSlot == 4 || detail.EndSlot == 6 || detail.EndSlot == 8 || detail.EndSlot == 10 || detail.EndSlot == 12 || detail.EndSlot == 14 || detail.EndSlot == 16 || detail.EndSlot == 18)
        { detail.EndMinutes = 30; }

    }

}

